<style>
  /* Navbar Background & Shadow */
.navbar {
  background: #ffffff;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  padding: 0.6rem 1rem;
}

/* Brand */
.navbar-brand {
  font-weight: 600;
  font-size: 1.3rem;
  color:  #fe424d;
}

.navbar-brand i {
  color:  #fe424d;
}

/* Nav Links */
.navbar-nav .nav-link {
  color: #555;
  font-weight: 500;
  margin-left: 0.5rem;
  margin-right: 0.5rem;
  transition: color 0.2s ease;
}

/* Search Bar */
.navbar .form-control {
  border-radius: 50px;
  padding: 0.35rem 1rem;
  border: 1px solid #ddd;
  transition: all 0.2s ease;
}

.navbar .form-control:focus {
  border-color:  #fe424d;
  box-shadow: 0 0 5px rgba(13, 110, 253, 0.3);
}

.btn-search {
  background:  #fe424d;
  color: #fff;
  border-radius: 50%;
  padding: 0.35rem 0.6rem;
  border: none;
  margin-left: 0.3rem;
  transition: background 0.2s ease, transform 0.2s ease;
}

.btn-search:hover {
  transform: scale(1.1);
}

/* Buttons */
.navbar-nav .btn {
  border-radius: 25px;
  padding: 0.35rem 1rem;
  font-weight: 500;
  transition: all 0.2s ease;
}

.navbar-nav .btn:hover {
  transform: translateY(-2px);
}

/* Mobile Adjustments */
@media (max-width: 576px) {
  .form-check, .navbar .form-control{
    width: 100%;
    margin-top: 0.3rem;
  }

  .navbar-nav .btn {
    margin-top: 0.3rem;
    width: 100%;
  }
  .btn-search{
    width: fit-content !important;
  }
}

</style>
<nav
  class="navbar navbar-expand-md navbar-light bg-light border-bottom sticky-top h-auto"
>
  <div class="container-fluid">
    <a class="navbar-brand" href="/listing"
      ><i class="fa-regular fa-compass"></i
    ></a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listing">Explore</a>
      </div>
      <div class="navbar-nav ms-auto">
        <form class="d-flex" role="search" action="/listing/search">
        <input class="form-control me-2" type="search" placeholder="Search destination" id="input" name="search"/>
        <button class="btn btn-search" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
      </form>
      </div>
      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listing/new">Add new Listing</a>
        <%if(!currentUser){%>
        <a class="nav-link active" href="/user/signup"><b>SignUp</b></a>
        <a class="nav-link" href="/user/login"><b>LogIn</b></a>
        <%}%> <%if(currentUser){%>
        <a class="nav-link" href="/user/logout"><b>Logout</b></a>
        <%}%>
      </div>
    </div>
  </div>
</nav>
