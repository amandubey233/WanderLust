<% layout("/layouts/boilerPlate") %>

<div class="row justify-content-center mt-5">
  <div class="col-12 col-md-6 col-lg-5">

    <div class="card shadow-sm p-4 rounded-4">
      <h2 class="text-center fw-bold mb-4">Sign Up to WanderLust</h2>

      <form action="/user/signup" method="post" class="needs-validation" novalidate>

        <!-- Username -->
        <div class="mb-3">
          <label for="username" class="form-label fw-semibold">Username</label>
          <input 
            type="text" 
            name="username" 
            id="username" 
            class="form-control rounded-pill px-3 py-2" 
            placeholder="Enter your username" 
            required
          >
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please enter a valid username</div>
        </div>

        <!-- Email -->
        <div class="mb-3">
          <label for="email" class="form-label fw-semibold">Email</label>
          <input 
            type="email" 
            name="email" 
            id="email" 
            class="form-control rounded-pill px-3 py-2" 
            placeholder="Enter your email" 
            required
          >
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please enter a valid email</div>
        </div>

        <!-- Password -->
        <div class="mb-3">
          <label for="password" class="form-label fw-semibold">Password</label>
          <input 
            type="password" 
            name="password" 
            id="password" 
            class="form-control rounded-pill px-3 py-2" 
            placeholder="Enter your password" 
            required
          >
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please enter a valid password</div>
        </div>

        <!-- Submit Button -->
        <div class="d-grid mt-4">
          <button type="submit" class="btn btn-dark rounded-pill py-2 shadow-sm">
            Sign Up
          </button>
        </div>

        <!-- Login Link -->
        <p class="text-center mt-3 mb-0">
          Already have an account? 
          <a href="/user/login" class="fw-semibold text-decoration-none">Log In</a>
        </p>

      </form>
    </div>

  </div>
</div>
