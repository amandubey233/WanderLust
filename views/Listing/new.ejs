<% layout("/layouts/boilerPlate")%>


<div class="row justify-content-center mt-4">
  <div class="col-12 col-md-8 col-lg-6">

    <div class="card shadow-sm p-4 rounded-4">
      <h2 class="mb-4 text-center fw-bold">Create a New Listing</h2>

      <form
        action="/listing"
        enctype="multipart/form-data"
        method="post"
        novalidate
        class="needs-validation"
      >

        <!-- Title -->
        <div class="mb-3">
          <label for="title" class="form-label fw-semibold">Title</label>
          <input
            type="text"
            class="form-control rounded-pill px-3"
            placeholder="Add a catchy title"
            name="listing[title]"
            id="title"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please enter a valid title</div>
        </div>

        <!-- Description -->
        <div class="mb-3">
          <label for="description" class="form-label fw-semibold">Description</label>
          <textarea
            class="form-control rounded-3 px-3 py-2"
            placeholder="Describe your listing..."
            name="listing[description]"
            id="description"
            rows="4"
            required
          ></textarea>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please enter a valid description</div>
        </div>

        <!-- Image -->
        <div class="mb-3">
          <label for="image" class="form-label fw-semibold">Upload Image</label>
          <input
            type="file"
            class="form-control"
            name="listing[image]"
            id="image"
          />
        </div>

        <!-- Price & Country -->
        <div class="row g-3 mb-3">
          <div class="col-md-4">
            <label for="price" class="form-label fw-semibold">Price</label>
            <input
              type="number"
              class="form-control rounded-pill px-3"
              placeholder="1200"
              name="listing[price]"
              id="price"
              required
            />
            <div class="invalid-feedback">Enter a valid price</div>
          </div>

          <div class="col-md-8">
            <label for="country" class="form-label fw-semibold">Country</label>
            <input
              type="text"
              class="form-control rounded-pill px-3"
              placeholder="India"
              name="listing[country]"
              id="country"
              required
            />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Enter valid country</div>
          </div>
        </div>

        <!-- Location -->
        <div class="mb-3">
          <label for="location" class="form-label fw-semibold">Location</label>
          <input
            type="text"
            class="form-control rounded-pill px-3"
            placeholder="Delhi, India"
            name="listing[location]"
            id="location"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Enter valid location</div>
        </div>

        <!-- Category -->
        <div class="mb-4">
          <label class="form-label fw-semibold">Category</label>
          <select class="form-select rounded-pill px-3 py-2" name="listing[category]" required>
            <option selected disabled>Select Category</option>
            <option value="Trending">Trending</option>
            <option value="Rooms">Rooms</option>
            <option value="Iconic">Iconic Cities</option>
            <option value="Mountain">Mountain</option>
            <option value="Castles">Castles</option>
            <option value="Pool">Amazing Pool</option>
            <option value="Camping">Camping</option>
            <option value="Farms">Farms</option>
            <option value="Arctic">Arctic</option>
          </select>
        </div>

        <!-- Submit -->
        <button type="submit" class="btn btn2  w-100 rounded-pill py-2 shadow-sm">
          Submit Listing
        </button>
      </form>
    </div>

  </div>
</div>
