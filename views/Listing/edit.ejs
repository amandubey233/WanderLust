<% layout("/layouts/boilerPlate") %>

<div class="row">
  <div class="col-8 offset-2">
    <h2>Edit Listing</h2>

    <!-- Edit Listing Form -->
    <form action="/listing/<%= listing._id %>?_method=PUT" method="POST" novalidate class="needs-validation">

      <!-- Title -->
      <div class="mb-3">
        <label for="title" class="form-label">Enter Title</label>
        <input 
          type="text" 
          class="form-control" 
          id="title" 
          name="listing[title]" 
          value="<%= listing.title %>" 
          placeholder="Add a catchy Title" 
          required
        >
        <div class="valid-feedback">Title looks good!</div>
        <div class="invalid-feedback">Enter a valid title</div>
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label for="description" class="form-label">Enter Description</label>
        <textarea 
          class="form-control" 
          id="description" 
          name="listing[description]" 
          placeholder="Add details" 
          required
        ><%= listing.description %></textarea>
        <div class="valid-feedback">Description looks good!</div>
        <div class="invalid-feedback">Enter a valid description</div>
      </div>

      <!-- Image -->
      <div class="mb-3">
        <label for="image" class="form-label">Enter Image URL/Link</label>
        <input 
          type="text" 
          class="form-control" 
          id="image" 
          name="listing[image]" 
          value="<%= listing.image %>" 
          placeholder="Enter Image Link" 
          required
        >
      </div>

      <!-- Price & Country -->
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Enter Price</label>
          <input 
            type="number" 
            class="form-control" 
            id="price" 
            name="listing[price]" 
            value="<%= listing.price %>" 
            placeholder="1200" 
            required
          >
          <div class="invalid-feedback">Enter a valid price</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Enter Country</label>
          <input 
            type="text" 
            class="form-control" 
            id="country" 
            name="listing[country]" 
            value="<%= listing.country %>" 
            placeholder="India" 
            required
          >
          <div class="valid-feedback">Country looks good!</div>
          <div class="invalid-feedback">Enter a valid country</div>
        </div>
      </div>

      <!-- Location -->
      <div class="mb-3">
        <label for="location" class="form-label">Enter Location</label>
        <input 
          type="text" 
          class="form-control" 
          id="location" 
          name="listing[location]" 
          value="<%= listing.location %>" 
          placeholder="Delhi, India" 
          required
        >
        <div class="valid-feedback">Location looks good!</div>
        <div class="invalid-feedback">Enter a valid location</div>
      </div>

      <!-- Submit Button -->
      <button type="submit" class="btn btn-dark">Update Listing</button>
    </form>
  </div>
</div>
