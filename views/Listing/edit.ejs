<% layout("/layouts/boilerPlate") %>

<div class="row justify-content-center mt-4">
  <div class="col-12 col-md-8 col-lg-6">

    <div class="card shadow-sm p-4 rounded-4">
      <h2 class="mb-4 text-center fw-bold">Edit Listing</h2>

      <!-- Edit Listing Form -->
      <form action="/listing/<%= listing._id %>?_method=PUT" method="POST" enctype="multipart/form-data" novalidate class="needs-validation">

        <!-- Title -->
        <div class="mb-3">
          <label for="title" class="form-label fw-semibold">Title</label>
          <input 
            type="text" 
            class="form-control rounded-pill px-3" 
            id="title" 
            name="listing[title]" 
            value="<%= listing.title %>" 
            placeholder="Add a catchy title" 
            required
          >
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Enter a valid title</div>
        </div>

        <!-- Description -->
        <div class="mb-3">
          <label for="description" class="form-label fw-semibold">Description</label>
          <textarea 
            class="form-control rounded-3 px-3 py-2" 
            id="description" 
            name="listing[description]" 
            placeholder="Add details" 
            rows="4"
            required
          ><%= listing.description %></textarea>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Enter a valid description</div>
        </div>

        <!-- Current Image Preview -->
        <div class="mb-3 text-center">
          <img src="<%= originalUrl %>" class="img-fluid rounded-3 shadow-sm" alt="Current Image">
        </div>

        <!-- Image Upload -->
        <div class="mb-3">
          <label for="image" class="form-label fw-semibold">Upload New Image</label>
          <input 
            type="file" 
            class="form-control" 
            id="image" 
            name="listing[image]"
          >
        </div>

        <!-- Price & Country -->
        <div class="row g-3 mb-3">
          <div class="col-md-4">
            <label for="price" class="form-label fw-semibold">Price</label>
            <input 
              type="number" 
              class="form-control rounded-pill px-3" 
              id="price" 
              name="listing[price]" 
              value="<%= listing.price %>" 
              placeholder="1200" 
              required
            >
            <div class="invalid-feedback">Enter a valid price</div>
          </div>

          <div class="col-md-8">
            <label for="country" class="form-label fw-semibold">Country</label>
            <input 
              type="text" 
              class="form-control rounded-pill px-3" 
              id="country" 
              name="listing[country]" 
              value="<%= listing.country %>" 
              placeholder="India" 
              required
            >
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Enter a valid country</div>
          </div>
        </div>

        <!-- Location -->
        <div class="mb-4">
          <label for="location" class="form-label fw-semibold">Location</label>
          <input 
            type="text" 
            class="form-control rounded-pill px-3" 
            id="location" 
            name="listing[location]" 
            value="<%= listing.location %>" 
            placeholder="Delhi, India" 
            required
          >
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Enter a valid location</div>
        </div>

        <!-- Submit -->
        <button type="submit" class="btn btn-dark w-100 rounded-pill py-2 shadow-sm">
          Update Listing
        </button>

      </form>
    </div>

  </div>
</div>
